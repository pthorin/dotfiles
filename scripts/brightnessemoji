      printf "ğŸ’¡"
    elif [ $_progress -gt 24 ]; then
      printf "ğŸ”¥"
    elif [ $_progress -gt 14 ]; then
      printf "ğŸ•¯ï¸"
    elif [ $_progress -gt 0 ]; then
