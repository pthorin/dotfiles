CURRENT=$(cat /sys/class/backlight/intel_backlight/brightness)

function ProgressBar {
# Process data
    let _progress=(${1}*100/${2}*100)/100
    if [ "$_progress" -gt 99 ]; then
      printf "ğŸ˜"
    elif [ $_progress -gt 89 ]; then
      printf "â˜€ï¸"
