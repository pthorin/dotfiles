general {
  colors = true
  interval = 1
  color_good = "#58D68D"
  color_bad = "#FF5733"
  color_degraded = "#FFC300"
}

#order += "read_file bigip"
order += "read_file weeknumber"
# order += "read_file agenda"
# order += "load"
order += "cpu_usage"
#order += "ipv6"
#order += "disk /"
order += "battery 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
        format_down = "-"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = "-"
}

battery 0 {
  format = "%status %percentage %remaining " # "%emptytime "
    format_down = "No battery"
    status_chr = "âš¡"
    status_bat = "ğŸ”‹"
    status_unk = "?"
    status_full = "ğŸ¦„"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 15
}


tztime local {
        format = "%c" # "%Y-%m-%d %H:%M"
}

load {
  format = "load %1min %5min %15min"
  max_threshold = "3,0"
  format_above_threshold = "ğŸš¨ High load ğŸš¨ 1: %1min 5: %5min 15: %15min ğŸš¨ High load ğŸš¨"
}

disk "/" {
        format = "%avail"
}

