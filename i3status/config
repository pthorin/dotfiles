# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
  color_good = "#58D68D"
  color_bad = "#FF5733"
  color_degraded = "#FFC300"
}

order += cpu_usage
#order += "ipv6"
#order += "disk /"
order += "battery 0"
order += "wireless _first_"
#order += "load"
order += "ethernet _first_"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
        format_down = "-"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = "-"
}

battery 0 {
  format = "%status %percentage %remaining " # "%emptytime "
    format_down = "No battery"
    status_chr = "âš¡"
    status_bat = "ðŸ”‹"
    status_unk = "?"
    status_full = "ðŸ¦„"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 15
}


tztime local {
        format = "%c" # "%Y-%m-%d %H:%M"
}

load {
        format = "Load %1min"
}

disk "/" {
        format = "%avail"
}

cpu_usage {
  format = "ðŸ’» %usage"
  max_threshold = 75
  degraded_threshold = 50
  format_above_threshold = "ðŸ”¥ %usage"
  format_above_degraded_threshold = "ðŸ¥µ  %usage"
}
