wtfmicroplane() {
cat << EOF
# Init => Clone => Plan => Push => Merge
microplane init "org:mp-test go1.8"
microplane clone
microplane status
microplane plan -b go1.9 -m "Golang 1.9 upgrade" -- sed -i 's/1.8/1.9/g' circle.yml
microplane push -a @me
microplane status
microplane merge
EOF
}

